{
  "name": "karma-jasmine-typescript-boilerplate",
  "description": "A simple test project which uses Karma, Jasmine, and TypeScript",
  "version": "0.0.1",
  "authors": [
    {
      "name": "zenOSmosis",
      "email": "info@zenosmosis.com",
      "url": "https://zenosmosis.com"
    }
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test:browser": "karma start --single-run",
    "test:browser:watch": "karma start --auto-watch",
    "test:node": "nyc --reporter=html jasmine --reporter=jasmine-console-reporter --config=jasmine.node.json",
    "test": "npm run test:node && npm run test:browser"
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/sinon": "^10.0.13",
    "expect": "^29.2.2",
    "jasmine": "^4.5.0",
    "jasmine-console-reporter": "^3.1.0",
    "jasmine-core": "^4.5.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-sinon": "^1.0.4",
    "karma-typescript": "^5.5.3",
    "karma-verbose-reporter": "^0.0.8",
    "karma-webkit-launcher": "^1.3.1",
    "nyc": "^15.1.0",
    "playwright": "^1.27.1",
    "prettier": "^2.5.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "keywords": [
    "karma",
    "jasmine",
    "typescript"
  ],
  "license": "MIT"
}
